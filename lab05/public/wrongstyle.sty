gray-border = 2px solid #303030
box-padding = 30px
dark-gray-background = #999999

body
    font: 24px Helvetica
    background: dark-gray-background

#main
    min-height: 800px
    margin: 0px
    padding: 0px
    display: flex
    flex-flow: row


#main > article
    // margin: 4px
    padding: box-padding
    border: gray-border
    /* border-radius: 7pt gives roound borders*/
    background: #dddd88
    flex: 3 1 60%
    order: 2


#main > nav
    /* margin: 4px */
    padding: box-padding
    border: gray-border
    /* border-radius: 7pt */
    background: #ccccff
    flex: 1 6 20%
    order: 1
    text-align: right


#main > aside
    /* margin: 4px */
    padding: box-padding
    border: gray-border
    /* border-radius: 7pt */
    background: #ccccff
    flex: 1 6 20%
    order: 3
    font-style: italic /* font for aside is different */


header
footer
    display: block
    /* margin: 4px */
    padding: 20px  0px 0px 30px
    min-height: 100px
    border: gray-border
    /* border-radius: 7pt */
    background: #ffeebb


header p
  font-size: 180%
  font-weight: bold

/* font size  for footer is smaller*/
footer
  font-size: 75%


/* Too narrow to support three columns */
@media all and (max-width: 640px)
    #main, #page
        flex-direction: column

    #main > nav
      order: 1
      /* navigation links are left aligned on mobile */
      text-align: left

    #main > article
      order: 2

    #main > aside
      order: 3

    #main > nav
    #main > aside
    header
    footer
        min-height: 50px
        max-height: 50px
